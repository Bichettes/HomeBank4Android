<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fowlcorp.homebank4android.About$PlaceholderFragment" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homebankLogoFull"
            android:layout_column="1"
            android:contentDescription="@string/HomeBank"
            android:layout_row="1"
            android:src="@drawable/homebankfull"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:id="@+id/originalWorkDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start|center_vertical"
            android:layout_row="3"
            android:text="@string/OriginalWorkDescription"
            android:gravity="start" />

        <Space
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_row="4"
            android:layout_column="1" />

        <TextView
            android:id="@+id/originalWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start|center_vertical"
            android:layout_row="5"
            android:text="@string/Original_Work"
            android:linksClickable="false"
            android:textStyle="bold"
            android:gravity="start" />

        <TextView
            android:id="@+id/originalWorkLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start|center_vertical"
            android:layout_row="6"
            android:text="@string/OriginalWorkLink"
            android:linksClickable="true"
            android:autoLink="web"
            android:gravity="start"/>

        <Space
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_row="7"
            android:layout_column="1" />

        <TextView
            android:id="@+id/originalContributors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start|center_vertical"
            android:layout_row="8"
            android:text="@string/Original_Contributors"
            android:linksClickable="false"
            android:textStyle="bold"
            android:gravity="start"/>

        <TextView
            android:id="@+id/originalContributorsLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start|center_vertical"
            android:layout_row="9"
            android:text="@string/OriginalContributorsLink"
            android:linksClickable="true"
            android:autoLink="web"
            android:gravity="start"/>

    </GridLayout>

</ScrollView>
