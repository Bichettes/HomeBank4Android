<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Override : must be present in general style-->
        <item name="android:colorActivatedHighlight">@color/colorAccent_Light</item>
        <item name="android:colorFocusedHighlight">@color/colorAccent_Light</item>
        <item name="android:progressDrawable">@color/colorAccent_Light</item>
        <item name="android:windowActionBar">false</item>

        <!--Specific-->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark_Light</item>
        <item name="android:colorPrimary">@color/colorPrimary_Light</item>
        <item name="android:colorAccent">@color/colorAccent_Light</item>
        <item name="android:progressTint">@color/colorAccent_Light</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowReturnTransition">@transition/cardview_fade</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

    </style>

    <!--Currently not in use-->
    <style name="AppTheme.Toolbar">
        <!--Override : must be present in general style-->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- This would set the toolbar's background color,
              but setting this also changes the popup menu's background,
              even if we define popupTheme for our <Toolbar> -->
        <!--<item name="android:background">@color/colorPrimary_Light</item>-->
        <item name="android:minHeight">?attr/actionBarSize</item>

        <!-- android:textColorPrimary is the  color of the title text
             in the Toolbar, in the Theme.AppCompat theme:  -->
        <item name="android:textColorPrimary">@color/colorToolbarText_Light</item>
        <!-- android:textColorSecondary is the color of the menu
             overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/colorToolbarText_Light</item>
        <item name="android:textColorTertiary">@color/colorToolbarText_Light</item>
        <!-- android:textColorPrimaryInverse is the  color of the title
             text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
        <!-- <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item> -->

        <!--<item name="android:popupBackground">@color/colorToolbarText_Light</item>-->

        <!-- android:actionMenuTextColor is the color of the text of
              action (menu) items in the Toolbar, at least in the
              Theme.AppCompat theme.
              For some reason, they already get the textColorPrimary
              when running on API 21, but not on older versions of
              Android, so this is only necessary to support older
              Android versions.-->
        <!--<item name="actionMenuTextColor">@color/abc_primary_text_material_light</item>-->

        <!--Specific-->
        <item name="android:transitionName">toolbar</item>
        <item name="android:touchscreenBlocksFocus">false</item>
    </style>
</resources>